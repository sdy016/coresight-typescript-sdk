{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true
  }
}
